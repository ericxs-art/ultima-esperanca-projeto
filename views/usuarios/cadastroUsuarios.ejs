<!-- Cabecalho principal  -->
<%- include('partials/header') %>

    <!-- Conteudo do index  -->
    <main class="container d-flex flex-column flex-fill justify-content-center">
        <h1 class="text-center"> PÁGINA DE CADASTRO DE USUÁRIOS </h1>

        <!-- CRIANDO O FOMULARIO PARA ENVIO DAS INFORMANÇÕES -->
        <form action="/usuarios/cadastrar" method="post">
            <div class="mb-3">
                <!-- Caixinha nome de usuario -->
                <label for="inputNome" class="form-label fs-2 mt-2">Nome de usuario</label>

                <input type="text" id="inputNome" class="form-control form-control-lg"
                    placeholder="Digite o nome de usuário" name="usuario" required />
                <!-- FIm Caixinha nome de usuario -->

                <!-- Caixinha de email -->
                <label for="inputEmail" class="form-label fs-2 mt-2">email</label>
                <input type="email" id="inputEmail" class="form-control form-control-lg" placeholder="Digite o email"
                    name="email" required />
                <!-- Fim de caixinha de email -->
                <!-- Caixinha de senha -->
                <label for="inputSenha" class="form-label fs-2 mt-2">Senha</label>
                <input type="password" id="inputSenha" class="form-control form-control-lg"
                    placeholder="Digite a sua senha" name="Senha" required />
                <!--fim Caixinha de senha -->
                <!-- Caixinha de tipo -->
<label for="inputSenha" class="form-label fs-2 mt-2">Tipo de usuario</label>
<select name="tipo" class="form-select form-select-lg mb-3" >
<option value="Funcionario">Funcionario</option>
<option value="Gerente">Gerente</option>
<option value="Administrador">Administrador</option>
</select>
                <!-- fim Caixinha de senha -->

                <!-- Botão pra envio do formulario -->
                 <button type="submit" class="btn btn-lg btn-primary">Cadastrar</button>
            </div>
        </form>
    </main>

    <!-- Rodape de todas as páginas  -->
    <%- include('../partials/footer') %>