<%- include('../partials/header') %>

    <main class="container d-flex flex-column flex-fill justify-content-center">
        <h1 class="text-center"> PÁGINA DE CADASTRO DE PRODUTOS </h1>
        <form action="/produtos/cadastrar" method="post">
            <div class="mb-3">

                <label for="inputName" class="form-label fs-2 mt-2">Nome do produto</label>
                <input type="text" id="inputName" class="form-control form-control-lg"
                    placeholder="Digite o nome do produto" name="nome" required />

                <label for="inputPreco" class="form-label fs-2 mt-2">Descrição</label>
                <input type="text" id="inputEmail" class="form-control form-control-lg" placeholder="Digite uma descrição"
                    name="produto" required />

                
        <div class="row g-2">
        <div class="col-md-6">        
<label for="inputSenha" class="form-label fs-2 mt-2">Tipo de Produtos</label>
<select name="tipo" class="form-select form-select-lg mb-3" >
<option value="Esportes">Esportes</option>
<option value="Transportes">Transportes</option>
<option value="Roupa de gala">Roupa de gala</option>
</select>
        </div>
        <div class="col-md-6">
            <label for="inputimagem" class="form-label fs-2 mt-2">imagem</label>
            <input type="text" id="inputimagem" class="form-control form-control-lg " placeholder="Digite o link da imagem" name="imagem" required/>
</div>
<div class="row g-2">
    <div class="col-md-6">
<label for="inputQntd" class="form-label fs-2 mt-2">Quantidade</label>
                <input type="number" id="inputQntd" class="form-control form-control-lg"
                    placeholder="Quantidade do produto" name="produto" required />
               
                    <label for="inputPreco" class="form-label fs-2 mt-2">Preço</label>
                <input type="number" id="inputPreco" class="form-control form-control-lg"
                    placeholder="Digite o Preço do produto" name="produto" required />
                    </div>
                    <div class="col-md-6">
                        <img class="d-flex mx-auto mt-3" src="https://soledade.rs.gov.br/admin/globalarq/noticia/noticia/651_366/semImagem.jpg" alt="" height="200px" width="300px">
                    </div>
</div>
                 <button type="submit" class="btn btn-lg btn-primary">Cadastrar</button>
            
        </form>
    </main>

    <%- include('../partials/footer') %>